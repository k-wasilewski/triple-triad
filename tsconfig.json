{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020",
    "sourceRoot": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
